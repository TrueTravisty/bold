extends ./layout.bs

block content
  h2 Log in

  .col-md-6
    form(action="/login", name="loginForm", method="post")
        .form-group
            label Username:
            input.form-control(type="text", name="username", required)
        .form-group
            label Password:
            input.form-control(type="password", name="password", required)
        input.btn.btn-primary(type="submit", ng-disabled="loginForm.$invalid", value="Log In")

    div: a(href="/register") Register new user
