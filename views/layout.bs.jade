doctype transitional
html(xmlns="http://www.w3.org/1999/xhtml" ng-app="bold")
    head
        block meta
        meta(http-equiv="X-UA-Compatible",content="IE=edge")
        meta(name="keywords", content="eve, eve corporation, mmo, eve online")
        meta(name="description", content="Brave Operations - Lollipop Division is the premiere small gang PVP division within I N F A M O U S <GLORY>")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
    
        title
            | Brave Operations - Lollipop Division
            - if (title) {
                |  - #{title}
            - }
        
        block links
            link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet", integrity="sha256-7s5uDGW3AHqw6xtJmNNtr+OBRJUlgkNJEo78P4b0yRw= sha512-nNo+yCHEyn0smMxSswnf/OnX6/KwJuZTlNZBjauKhTK0c+zT+q5JOCx0UFhXQ6rJR9jg6Es8gPuD2uZcYDLqSw==", crossorigin="anonymous")
            link(href="/stylesheets/bootstrap.style.css", rel="stylesheet", type="text/css", media="screen")
            link(href="/stylesheets/newstyle.css", rel="stylesheet", type="text/css", media="screen")
            link(rel="icon", href="images/bold.ico", type="image/x-icon")
            link(rel="shortcut icon", href="bundles/boldhome/images/bold.ico", type="image/x-icon")

    body.ng-cloak(ng-controller="MainCtrl")
        include ./includes/top_bar_ang.jade
        
        .container
            .logo.hidden-xs
                .logoimage
                    a(href='/')
                        img(src="/images/bold.png", width="128", height="128", alt="Brave Operations - Lollipop Division")
                h1
                    a(href='/') Brave Operations - Lollipop Division
                a(href='/')
                    small Big things come in small packages
            .logo.visible-xs
                .logoimage-xs
                    a(href='/')
                        img.center-block(src="/images/bold.png", width="128", height="128", alt="Brave Operations - Lollipop Division")
                h1 
                    a(href="/") Brave Operations
                h2 
                    a(href="/") - Lollipop Division
                
                                                
            .clear
            
            uib-alert(ng-repeat="alert in alerts", type="{{alert.type}}" close="closeAlert($index)") {{alert.msg}}
            
            block content
            
        .container
            include ./includes/bottom_bar.ang.jade
        
        .container    
            #footer
                include ./includes/notices.jade
    
        block bodyscripts
            script(type="text/javascript", src="/javascripts/angular.min.js")
            script(type="text/javascript", src="/javascripts/angular-touch.min.js")
            script(type="text/javascript", src="/javascripts/angular-messages.min.js")
            script(type="text/javascript", src="/javascripts/ui-bootstrap-tpls-0.14.3.min.js") 
            script(type="text/javascript", src="/javascripts/numeral.min.js")
            script(type="text/javascript", src="/javascripts/angular-numeraljs.min.js")
            script(type="text/javascript", src="/javascripts/smart-table.min.js")            
            
            script(type="text/javascript", src="/javascripts/app/module.js")
            
            
      
