extends ./layout.jade

block content
  h2 Our Team
  .personblock
    each manager in managers
      .person
        img(src="/eveimages/" + manager.ID, height="100", width="100")
        .name
          = manager.name
        .title
          = manager.title
        .function
          = manager.function

