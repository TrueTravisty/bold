    tr
      th Internal Affairs
      td Nick Cornax
    tr
      th IT
      td Yaldo Asanari
    tr
      th Logistics
      td Thalonia
    tr
      th Military
      td Gavakz Moliko &amp; Lacks Pants
    tr
