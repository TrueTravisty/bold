    tr
      th Internal Affairs
      td
    tr
      th IT
      td Yaldo Asanari
    tr
      th Logistics
      td Thalonia
    tr
      th Military
      td Aznwithbeard
    tr
      th Recruitment
      td All officers/directors
    tr
