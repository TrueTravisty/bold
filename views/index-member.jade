extends ./layout.bs

append bodyscripts
    script(type="text/javascript", src="/javascripts/app/killmails.js")

block content

  .col-md-12
    h1 Welcome #{user.username}!

    p.
      Below you find some recent information about the corp



  .col-md-6  
    uib-accordion(close-others="false")
        uib-accordion-group(heading="Latest Kills", is-open="false")
            div(ng-controller="LatestKillsCtrl")
                kill-list(kills="kills")
        uib-accordion-group(heading="Latest Losses", is-open="false")    
            div(ng-controller="LatestLossesCtrl")
                kill-list(kills="kills")
    
  .col-md-6
    uib-accordion(close-others="false")
        uib-accordion-group(heading="Biggest kills last 14 days", is-open="false")
            div(ng-controller="LargestKillsCtrl")
                kill-list(kills="kills")
        uib-accordion-group(heading="Biggest losses last 14 days", is-open="false")
            div(ng-controller="LargestLossesCtrl")
                kill-list(kills="kills")
      
  // .col-md-12
  //   h3 Latest from&nbsp;
  //         a(href='http://www.reddit.com/r/braveoperations') our subreddit
      
  .clear
