.killmails
each killmail in killmails
  .killmail
    .killid: a(href="https://zkillboard.com/kill/" + killmail.killID + "/") zKillBoard
    .ship
      img(src='/images/Types/' + killmail.victim.shipTypeID + '_64.png')
    .shipName
      = killmail.victim.shipType
    .class
      = killmail.victim.shipClass
    .value
    if killmail.zkb
      - var val = killmail.zkb.totalValue;
      = iskify(val)
      if val > 1000000
        = ' (' + iskifya(val) + ')'
    .system #{killmail.solarSystemName}
    .time #{killmail.killTime}
